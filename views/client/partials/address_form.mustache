    <hr/>

    <div class="form-group">
      <div class="form-group" id="existingAddress">
        <label>Recipient Address:</label>
        <select class="form-control" name="address_id" id="addressId">
          <option value="">-- Choose Existing Address --</option>
          {{{award.addressOptions}}}
        </select>
      </div>

      <a class="btn btn-primary" role="button" data-toggle="collapse" aria-expanded="false" aria-controls="addressForm" data-target="#addressForm">Create New Address</a>
    </div>


    <div id="addressForm" class="collapse">

      <div class="form-group">
        <label>Address Description</label>
        <input class="form-control" name="address_description" value="{{address.description}}">
      </div>

      <div class="form-group">
        <label>Address 1</label>
        <input class="form-control" name="address_address1" value="{{address.address1}}">
      </div>

      <div class="form-group">
        <label>Address 2</label>
        <input class="form-control" name="address_address2" value="{{address.address2}}">
      </div>

      <div class="form-group">
        <label>Address 3</label>
        <input class="form-control" name="address_address2" value="{{address.address3}}">
      </div>

      <div class="form-group">
        <label>City</label>
        <input class="form-control" name="address_city" value="{{address.city}}">
      </div>

      <div class="form-group">
        <label>State</label>
        <input class="form-control" name="address_state" value="{{address.state}}">
      </div>

      <div class="form-group">
        <label>Zipcode</label>
        <input class="form-control" name="address_zipcode" value="{{address.zipcode}}">
      </div>

      <div class="form-group">
        <label>Country</label>
        <select class="form-control" name="address_country">
          {{#countries}}
            <option value="{{id}}">{{name}}</option>
          {{/countries}}
        </select>
      </div>
    </div>
