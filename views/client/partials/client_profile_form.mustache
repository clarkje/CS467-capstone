<!-- admin_profile begin -->
{{#updated}}
<!-- Updated a user successfully -->
<div class="alert alert-success">
  Profile Updated Succssfully
</div>
{{/updated}}

{{#error}}
<!-- Something bad happened -->
<div class="alert alert-danger">
  {{error}}
</div>
{{/error}}

<form role="form" method="POST" action="/client/update_profile.php">
    {{#id}}<input type="hidden" name="id" value="{{id}}">{{/id}}
    <input type="hidden" name="action" value="update">

    <div class="form-group">
      <label>First Name</label>
      <input class="form-control" name="email" value="{{firstName}}">
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <input class="form-control" name="email" value="{{lastName}}">
    </div>

    <div class="form-group">
      <label>Email</label>
      <input class="form-control" name="email" value="{{email}}">
    </div>

    <div class="form-group">
      <label>Change Password</label>
      <input type="password" class="form-control" name="password" placeholder="password">
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-default" >Update Profile</button>
    </div>
  </form>

<!-- admin_profile end -->
